<div class="subtitle">
  Student Commitments
  - <a href="<%= airtable_url_for "Commitments" %>">View All â†’</a>
</div>

<% if @commitments.any? %>
  <% @commitments.group_by{|c| c["By When"]}.each do |day, tasks| %>
    <section>
      <% if day.present? %>
        <h4>
          <%= Date.parse(day).strftime("%a, %b %d")  %>
        </h4>
      <% end %>
      <ul>
        <% tasks.each do |t| %>
        <li><%= t["Commitment"] %></li>
        <% end %>
      </ul>
    </section>
  <% end %>
<% else %>
  <p>No upcoming student commitments.</p>
<% end %>
