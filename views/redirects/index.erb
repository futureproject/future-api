<ul>
  <li>
    <div class='shortcut header'>Shortcut</div>
    <div class='url header'>Full URL</div>
  </li>
  <% @resources.each do |redirect| %>
    <li>
      <div class='shortcut'>
        <a href="/<%= redirect.shortcut %>">
          <%= "http://go.dream.org/#{redirect.shortcut}" %>
        </a>
      </div>
      <div class='url'><%= redirect.url %></div>
      <div class='actions'>
        <a href="<%= url("/#{redirect.id}/edit") %>" class='edit'>Edit</a>
        <a href="<%= url("/#{redirect.id}/destroy") %>"class='destroy'>Delete</a>
      </div>
    </li>
  <% end %>
</ul>
